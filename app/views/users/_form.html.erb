<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="row col-sm-6">
    <div class="form-group">
      <%= f.text_field :user_name, placeholder: "Name", :class => "form-control " %>
    </div>
    <div class="form-group">
      <%= f.text_field :first_name, placeholder: "First Name", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name, placeholder: "Last Name", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, type: "password",placeholder: "Password", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, type: "password",placeholder: "Confirm Password", :class => "form-control" %>
    </div>

    <div>
      <%= f.label :Team%>
      <%= f.select :team, ['ROR','Mobile','Designer'], {}, class: "form-control"  %>
    </div>
    <p></p>
    <div class="form-group">
      <%= f.submit 'Register', class: "btn btn-default btn-success" %>
    </div>
  </div>
<% end %>