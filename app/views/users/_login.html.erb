<%= form_for @user, :url => authentication_users_path, :html => {:class => "form-horizontal center"} do |f| %> 
  <div class="row col-sm-6">
    <div class="form-group">
      <%= f.text_field(:email, placeholder: "Email", :class => "form-control") %>
    </div>
    <div class="form-group">
      <%= f.password_field(:password, type: "password",placeholder: "Password", :class => "form-control") %>
    </div>
    <div class="form-group">
    <%= f.submit 'Login', class: "btn btn-default btn-success"%>
    </div>
    <%= link_to 'Forgot Password', forgot_password_users_path%>
  </div>
  <% end %>