<%= form_for ([current_user, @album]), html: {multipart: true,:class => "form-horizontal center"} do |f| %>
  <div class="row col-sm-6">
    <h3>New Album</h3>
    <div>
      <%= f.text_field :name, placeholder: "Enter name of album", :class => "form-control "  %></br>
    </div>
    <div>
      <%= f.text_area :description, placeholder: "Description", :class => "form-control "  %></br>
    </div>
    <div>
      <%= f.label "Publish"%>
      <%= f.check_box :publish %>
    </div>
    <h3>Add Photos</h3>
    <div>
      <%= f.fields_for :photos do |photo| %>
        <%= render 'photo_fields', f: photo %>
      <% end %></br>
      <%= link_to_add_association 'add photo', f, :photos, :class => "btn btn-small btn-primary" %>
    </div></br>
    <div>
      <%= f.submit :class => "btn btn-success" %>
    </div>
  </div>  
<% end %>

